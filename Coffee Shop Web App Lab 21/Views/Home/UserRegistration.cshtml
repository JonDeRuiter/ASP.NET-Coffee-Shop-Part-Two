@{
    ViewBag.Title = "User Registration";
    var message = "";
    

}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<form method="post" action="Welcome">
    <p style="font:italic 24px times new roman">First Name: </p><input name="firstName" placeholder="Name" required/><br /><br />
    <p>Email: </p><input name="email" type="email" placeholder="example@email.com" required/><br /><br />
    <p>Password: </p><input name="password" type="password" placeholder="Password" required/><br /><br />
    <p>Confirm Password: </p> <input name="confirmPW" type="password" placeholder="Confirm Password" required/><br />
    <br /><br />
    <p>Phone Number: </p><input name="phoneNum" placeholder="111-222-3333" required/>
    <br /><br /><br />
    <p>Favorite Nintendo Character: <br /> (Purely for research purposes)</p>
    <input type="radio" name="ninFav" value="Yoshi" /> Yoshi <br />
    <input type="radio" name="ninFav" value="Luigi" /> Luigi<br />
    <input type="radio" name="ninFav" value="Waluigi" checked/> Anyone but Waluigi <br /> <br />
    <p>Thank you for signing up for our newsletter and reading all of our promotional emails! <br />(they're comming don't worry!)</p>
    <input type="checkbox" name="marketing" value="true" checked /> <br />
    <input type="submit" /><br />

</form>
